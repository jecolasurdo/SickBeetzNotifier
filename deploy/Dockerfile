FROM golang:1.9

ENV SBN_SLACK_BOT_NAME="" \
    SBN_SLACK_CHANNEL_NAME="" \
    SBN_SLACK_TOKEN="" \
    SBN_SPOTIFY_PLAYLIST_NAME-="" \
    SBN_SPOTIFY_PLAYLIST_OWNER="" \
	SBN_SPOTIFY_PLAYLIST_URI="" \
    SBN_SPOTIFY_REDIRECT_URI="" \
	SBN_SPOTIFY_USER="" \
	SPOTIFY_ID="" \
	SPOTIFY_SECRET=""

RUN mkdir -p /opt/sbn
WORKDIR /opt/sbn
COPY . /opt/sbn

